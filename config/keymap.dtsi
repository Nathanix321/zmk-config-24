#include "includes.h"

/   {
        keymap {
                compatible = "zmk,keymap";

                alpha1_layer {
                     display-name = "ALPHA1";
                     bindings = <
    &none               SEMI_COLON          COMMA_Q             DOT_EXCL            &none               &none               &kp G               &kp N               &kp W               &none
    LT_MAGIC_H          &hml LALT I         &hml LCTRL E        &hml LSHFT A        &none               &none               &hmr LSHFT D        &hmr LCTRL R        &hml LALT S         &lt SHORTCUTS L
    &none               &kp Y               &kp O               &hml LGUI U         &none               &none               &hmr LGUI C         &kp M               &kp F               &none
                                            &none               LT_NUM_SPACE        LT_NAV_ALPHA2       &arcane_repeat 0 0  &hlt SYMBOLS T      &none
                        >;
                };

                alpha2_layer {
                     display-name = "ALPHA2";
                     bindings = <
    &none               COLON_SEMI          Q_COMMA             EXCL_DOT            &none               &none               &kp B               &kp J               &kp K               &none
    &lt SHORTCUTS X     HML_ACC_I_CIRC      HML_ACC_E_AIGU      HML_ACC_A_GRAVE     &none               &none               &hmr LSHFT  P       &hmr LCTRL RA(SQT)  &hmr LALT RA(GRAVE) &lt SHORTCUTS V
    &none               &kp Q               &acc_o_circ         HML_ACC_U_CIRC      &none               &none               HMR_ACC_C_CEDILLE   &kp RA(CARET)       &kp RA(DQT)         &none
                                            &none               &space_under_morph  &none               &none               &kp MINUS           &none
                        >;
                };

                numbers_layer {
                     display-name = "NUM";
                     bindings = <
    &none               &th_lbrc 0 0        &th_rbrc 0 0        &kp BSLH            &none               &none               &kp N7              &kp N8              &kp N9              &none
    &mo FUNCTIONS       &th_lpar 0 0        &th_rpar 0 0        &kp AMPS            &none               &none               &kp N4              &kp N5              &kp N6              &kp DOT
    &none               &th_lbkt 0 0        &th_rbkt 0 0        &kp PIPE            &none               &none               &kp N1              &kp N2              &kp N3              &none
                                            &none               &none               &none               &kp SPACE           &hlt SYMBOLS N0     &none
                        >;
                };

                symbols_layer {
                     display-name = "SYM";
                     bindings = <
    &none               &kp TILDE           &kp POUND           &th_apos 0 0        &none               &none               &kp PERCENT         &th_equal 0 0       &th_colon 0 0       &none
    &kp AT              &kp CARET           &kp DOLLAR          &th_dqt 0 0         &none               &none               &th_qmark 0 0       &kp MINUS           &kp PLUS            &lt MACROS COMMA
    &none               &kp LT              &kp GT              &th_grave 0 0       &none               &none               &th_excl 0 0        &kp FSLH            &kp STAR            &none
                                            &none               LT_NUM_SPACE        &none               &none               &none               &none
                        >;
                };

                shortcuts_layer {
                     display-name = "SHORT";
                     bindings = <
    &none               &term               &files              &task_man           &none               &none               &kp CAPSLOCK        &caps_word           &admin_term         &none
    &none               &debug_step_out     &debug_step_in      &debug_step_over    &none               &none               &none               &none               &none               &none
    &none               &debug_stop         &debug_restart      &debug_pp           &none               &none               &none               &none               &none               &none
                                            &none               &kp SPACE           &none               &none               &none               &none
                        >;
                };

                nav_layer {
                     display-name = "NAV";
                     bindings = <
    &none               &none               &none               &none               &none               &none               &th_tab 0 0         &th_enter 0 0       &kp ESC             &none
    &lt TEXT INS        &kp LALT            &kp LCTRL           &kp LSHFT           &none               &none               &kp LEFT            &kp DOWN            &kp UP              &kp RIGHT
    &none               &none               &none               &kp LGUI            &none               &none               &kp DEL             &kp HOME            &kp END             &none
                                            &none               &none               &none               &kp SPACE           &none               &none
                        >;
                };

                text_layer {
                     display-name = "TEXT";
                     bindings = <
    &none               &sel_home           &sel_word_fw        &sel_line           &none               &none               &th_tab 0 0         &th_enter 0 0       &kp ESC             &none
    &none               &kp LALT            &kp LCTRL           &kp LSHFT           &none               &none               &mv_word_bw         &kp DOWN            &kp UP              &mv_word_fw
    &none               &none               &none               &kp LGUI            &none               &none               &del_word_fw        &kp HOME            &kp END             &none
                                            &none               &none               &none               &kp SPACE           &none               &none
                        >;
                };

                media_layer {
                     display-name = "MEDIA";
                     bindings = <
    &none               &none               &none               &none               &none               &none               &kp TAB             &kp ENTER           &kp ESC             &none
    &none               &kp LALT            &kp LCTRL           &kp LSHFT           &none               &none               &th_mic_cam 0 0     &mt C_MUTE C_VOL_DN &kp C_VOL_UP        &none
    &none               &none               &none               &kp LGUI            &none               &none               &kp C_PP            &kp C_PREV          &kp C_NEXT          &none
                                            &none               &space_under_morph  &none               &none               &none               &none
                        >;
                };

                functions_layer {
                     display-name = "FUNC";
                     bindings = <
    &none               &bt BT_PRV          &bt BT_NXT          &bt BT_SEL 0        &none               &none               &kp F7              &kp F8              &kp F9               &none
    &none               &kp LALT            &kp LCTRL           &kp LSHFT           &none               &none               &kp F4              &kp F5              &kp F6               &none
    &none               &none               &none               &kp LGUI            &none               &none               &kp F1              &kp F2              &kp F3               &none
                                            &none               &none               &none               &none               &none               &none
                        >;
                };

                macros_layer {
                     display-name = "MACROS";
                     bindings = <
    &none               &shortcut_combos    &nav_combos         &keymap             &none               &none               &none               &none               &none               &none
    &none               &haha               &term_exit          &new_task           &none               &none               &personal2          &work               &school             &none
    &none               &none               &none               &new_task_enter     &none               &none               &personal1          &none               &none               &none
                                            &none               &none               &none               &none               &none               &none
                        >;
                };

