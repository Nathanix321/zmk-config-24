                shortcuts_layer {
                     display-name = "SHORT";
                     bindings = <
    &none               &mc_term            &mc_files           &mc_task_man        &none               &none               &kp CAPSLOCK        &caps_word          &mc_admin_term      &none
    &none               &mc_debug_step_out  &mc_debug_step_in   &mc_debug_step_over &none               &none               &none               &none               &none               &none
