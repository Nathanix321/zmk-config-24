    hml: hml {
        compatible = "zmk,behavior-hold-tap"; \
        flavor = "balanced";
        #binding-cells = <2>;
        tapping-term-ms = <280>;
        quick-tap-ms = <QUICK_TAP_TERM>;
        require-prior-idle-ms = <150>;
        bindings = <&kp>, <&kp>;
        hold-trigger-on-release;
        hold-trigger-key-positions = <KEYS_R THUMBS>;
    };

    hmr: hmr {
        compatible = "zmk,behavior-hold-tap"; \
        flavor = "balanced";
        #binding-cells = <2>;
        tapping-term-ms = <280>;
        quick-tap-ms = <QUICK_TAP_TERM>;
        require-prior-idle-ms = <150>;
        bindings = <&kp>, <&kp>;
        hold-trigger-on-release;
        hold-trigger-key-positions = <KEYS_L THUMBS>;
    };
};
