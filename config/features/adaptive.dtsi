/ {
    adaptive_keys {
        
        // ******************** ARCANE ******************** //

        arcane_key: arcane_key {
            compatible = "zmk,behavior-adaptive-key";
            #binding-cells = <0>;
            bindings = <&none>;

            ADAPTIVE(a, kp <A>, N D SPACE)
        };
    };
};

